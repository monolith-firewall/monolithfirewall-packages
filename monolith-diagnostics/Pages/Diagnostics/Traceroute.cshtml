@page "/p/monolith-diagnostics/diagnostics/traceroute"
@{
    Layout = null;
    ViewData["Title"] = "Traceroute Diagnostic";
}

<div class="package-page diagnostics-page" data-module="diagnostics" data-package="monolith-diagnostics">
    <div class="container-fluid p-4">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="page-title">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.326 0-2.392.087-2.672.246-.19.135-.23.554-.12.867z"/>
                    </svg>
                    Traceroute Diagnostic
                </h2>
                <p class="text-muted">Trace the network path to a host</p>
            </div>
        </div>

        <div id="diagnosticsStatus" class="alert d-none"></div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Traceroute Configuration</h5>
                    </div>
                    <div class="card-body">
                        <form id="tracerouteForm" class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Host</label>
                                <input type="text" class="form-control" id="traceHost" placeholder="8.8.8.8 or example.com" required autofocus>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Max Hops</label>
                                <input type="number" class="form-control" id="traceMaxHops" min="1" max="64" value="30">
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <div class="form-check form-switch w-100">
                                    <input class="form-check-input" type="checkbox" id="traceFast" checked>
                                    <label class="form-check-label" for="traceFast">Fast trace</label>
                                </div>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <div class="form-check form-switch w-100">
                                    <input class="form-check-input" type="checkbox" id="traceResolve">
                                    <label class="form-check-label" for="traceResolve">Resolve Hostnames</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Run Traceroute</button>
                                <button type="button" class="btn btn-outline-secondary" id="traceClear">Clear</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Results</h6>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="traceCopy">Copy</button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive mb-3">
                            <table class="table table-sm diagnostics-table">
                                <thead>
                                    <tr>
                                        <th>Hop</th>
                                        <th>Host</th>
                                        <th>Times (ms)</th>
                                    </tr>
                                </thead>
                                <tbody id="tracerouteTable">
                                    <tr><td colspan="3" class="text-muted text-center">No results yet.</td></tr>
                                </tbody>
                            </table>
                        </div>
                        <pre id="tracerouteOutput" class="diagnostics-output">No results yet.</pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="/_content/Monolith.Diagnostics/css/diagnostics.css" data-module-css="diagnostics" />
    <script src="/_content/Monolith.Diagnostics/js/diagnostics-traceroute.js" data-module-js="diagnostics-traceroute"></script>
}
