@page "/p/monolith-diagnostics/diagnostics/config"
@{
    Layout = null;
    ViewData["Title"] = "Diagnostics";
}

<div class="package-page diagnostics-page" data-module="diagnostics" data-package="monolith-diagnostics">
    <div class="container-fluid p-4">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="page-title">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                        <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zM7 4.995a1 1 0 1 1 2 0l-.35 3.507a.55.55 0 0 1-1.1 0L7 4.995zM7 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0z"/>
                    </svg>
                    Diagnostics
                </h2>
                <p class="text-muted">Run network diagnostics without leaving the UI</p>
            </div>
        </div>

        <div id="diagnosticsStatus" class="alert d-none"></div>

        <ul class="nav nav-tabs mb-3" id="diagnosticsTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="diag-ping-tab" data-bs-toggle="tab" data-bs-target="#diag-ping" type="button" role="tab">Ping</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="diag-trace-tab" data-bs-toggle="tab" data-bs-target="#diag-trace" type="button" role="tab">Traceroute</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="diag-mtr-tab" data-bs-toggle="tab" data-bs-target="#diag-mtr" type="button" role="tab">Multi Trace (MTR)</button>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="diag-ping" role="tabpanel">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Ping</h5>
                    </div>
                    <div class="card-body">
                        <form id="pingForm" class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Host</label>
                                <input type="text" class="form-control" id="pingHost" placeholder="8.8.8.8 or example.com" required>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Count</label>
                                <input type="number" class="form-control" id="pingCount" min="1" max="20" value="4">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Size (bytes)</label>
                                <input type="number" class="form-control" id="pingSize" min="0" max="1400" value="56">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Interval (ms)</label>
                                <input type="number" class="form-control" id="pingInterval" min="200" max="5000" value="1000">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Timeout (ms)</label>
                                <input type="number" class="form-control" id="pingTimeout" min="500" max="10000" value="3000">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Run Ping</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Results</h6>
                    </div>
                    <div class="card-body">
                        <div id="pingSummary" class="row g-3 mb-3"></div>
                        <pre id="pingOutput" class="diagnostics-output">No results yet.</pre>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="diag-trace" role="tabpanel">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Traceroute</h5>
                    </div>
                    <div class="card-body">
                        <form id="tracerouteForm" class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Host</label>
                                <input type="text" class="form-control" id="traceHost" placeholder="8.8.8.8 or example.com" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Max Hops</label>
                                <input type="number" class="form-control" id="traceMaxHops" min="1" max="64" value="30">
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="traceFast" checked>
                                    <label class="form-check-label" for="traceFast">Fast trace</label>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="traceResolve">
                                    <label class="form-check-label" for="traceResolve">Resolve Hostnames</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Run Traceroute</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Results</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm diagnostics-table">
                                <thead>
                                    <tr>
                                        <th>Hop</th>
                                        <th>Host</th>
                                        <th>Times (ms)</th>
                                    </tr>
                                </thead>
                                <tbody id="tracerouteTable">
                                    <tr><td colspan="3" class="text-muted text-center">No results yet.</td></tr>
                                </tbody>
                            </table>
                        </div>
                        <pre id="tracerouteOutput" class="diagnostics-output">No results yet.</pre>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="diag-mtr" role="tabpanel">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Multi Traceroute (MTR)</h5>
                    </div>
                    <div class="card-body">
                        <form id="mtrForm" class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Host</label>
                                <input type="text" class="form-control" id="mtrHost" placeholder="8.8.8.8 or example.com" required>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Count</label>
                                <input type="number" class="form-control" id="mtrCount" min="1" max="50" value="10">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Interval (ms)</label>
                                <input type="number" class="form-control" id="mtrInterval" min="200" max="5000" value="1000">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Refresh (ms)</label>
                                <input type="number" class="form-control" id="mtrRefresh" min="1000" max="10000" value="2000">
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="mtrResolve">
                                    <label class="form-check-label" for="mtrResolve">Resolve Hostnames</label>
                                </div>
                            </div>
                            <div class="col-12 d-flex flex-wrap gap-2">
                                <button type="submit" class="btn btn-primary" id="mtrRun">Run Once</button>
                                <button type="button" class="btn btn-outline-primary" id="mtrLive">Start Live</button>
                                <button type="button" class="btn btn-outline-secondary" id="mtrStop">Stop</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Results</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm diagnostics-table">
                                <thead>
                                    <tr>
                                        <th>Hop</th>
                                        <th>Host</th>
                                        <th>Loss %</th>
                                        <th>Avg (ms)</th>
                                        <th>Last</th>
                                        <th>Best</th>
                                        <th>Worst</th>
                                        <th>StdDev</th>
                                        <th>Trend</th>
                                    </tr>
                                </thead>
                                <tbody id="mtrTable">
                                    <tr><td colspan="9" class="text-muted text-center">No results yet.</td></tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="diagnostics-chart mt-3" id="mtrChart"></div>
                        <pre id="mtrOutput" class="diagnostics-output">No results yet.</pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="/_content/Monolith.Diagnostics/css/diagnostics.css" data-module-css="diagnostics" />
    <script src="/_content/Monolith.Diagnostics/js/diagnostics.js" data-module-js="diagnostics"></script>
}
