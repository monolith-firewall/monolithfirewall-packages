@page "/p/monolith-diagnostics/diagnostics/ping"
@{
    Layout = null;
    ViewData["Title"] = "Ping Diagnostic";
}

<div class="package-page diagnostics-page" data-module="diagnostics" data-package="monolith-diagnostics">
    <div class="container-fluid p-4">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="page-title">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.326 0-2.392.087-2.672.246-.19.135-.23.554-.12.867z"/>
                    </svg>
                    Ping Diagnostic
                </h2>
                <p class="text-muted">Test network connectivity to a host</p>
            </div>
        </div>

        <div id="diagnosticsStatus" class="alert d-none"></div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Ping Configuration</h5>
                    </div>
                    <div class="card-body">
                        <form id="pingForm" class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Host</label>
                                <input type="text" class="form-control" id="pingHost" placeholder="8.8.8.8 or example.com" required autofocus>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Count</label>
                                <input type="number" class="form-control" id="pingCount" min="1" max="20" value="4">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Size (bytes)</label>
                                <input type="number" class="form-control" id="pingSize" min="0" max="1400" value="56">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Interval (ms)</label>
                                <input type="number" class="form-control" id="pingInterval" min="200" max="5000" value="1000">
                            </div>
                            <div class="col-12">
                                <label class="form-label">Timeout (ms)</label>
                                <input type="number" class="form-control" id="pingTimeout" min="500" max="10000" value="3000">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Run Ping</button>
                                <button type="button" class="btn btn-outline-secondary" id="pingClear">Clear</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Results</h6>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="pingCopy">Copy</button>
                    </div>
                    <div class="card-body">
                        <div id="pingSummary" class="row g-3 mb-3"></div>
                        <pre id="pingOutput" class="diagnostics-output">No results yet.</pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="/_content/Monolith.Diagnostics/css/diagnostics.css" data-module-css="diagnostics" />
    <script src="/_content/Monolith.Diagnostics/js/diagnostics-ping.js" data-module-js="diagnostics-ping"></script>
}
